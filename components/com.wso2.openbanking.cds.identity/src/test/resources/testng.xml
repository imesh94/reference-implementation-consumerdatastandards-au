<suite name="identity-base-test-suite">
    <test name="accelerator-dcr-test-all">
        <classes>
            <class name="com.wso2.openbanking.cds.identity.dcr.DCRUtilTest"/>
        </classes>
    </test>
    <test name="auth-extensions-test">
        <classes>
            <class name="com.wso2.openbanking.cds.identity.auth.extensions.request.validator.RequestObjectValidatorTest"/>
            <class name="com.wso2.openbanking.cds.identity.auth.extensions.response.handler.CDSResponseTypeHandlerImplTest"/>
