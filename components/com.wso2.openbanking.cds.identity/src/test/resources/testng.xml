        <classes>
            <class name="com.wso2.openbanking.cds.identity.listener.application.ApplicationManagementListenerTest"/>
        </classes>
    </test>
    <test name="grant-type-handlers">
        <classes>
            <class name="com.wso2.openbanking.cds.identity.grant.type.handlers.CDSAuthorizationCodeGrantHandlerTest"/>
            <class name="com.wso2.openbanking.cds.identity.grant.type.handlers.CDSRefreshGrantHandlerTest"/>
        </classes>
    </test>
    <test name="claims">
        <classes>
            <class name="com.wso2.openbanking.cds.identity.claims.CDSClaimProviderTest"/>
        </classes>
    </test>
</suite>
