<Server xmlns="http://wso2.org/projects/carbon/open-banking-cds.xml">
    <DCR>
        <!--if true validate the policy,client,terms of service,logo uris -->
        <EnableURIValidation>false</EnableURIValidation>
        <!--if true validate the hostnames of policy,client,terms of service, logo uris match with the hostname of redirect uri-->
        <EnableHostNameValidation>false</EnableHostNameValidation>
    </DCR>
    <ConsentManagement>
        <!--Configure endpoint to retrieve payable accounts passing userId https://localhost:9443/as400/payable-accounts/{userId} -->
        <!-- Configure endpoint to retrieve BERLIN payable accounts passing PSU-ID as a path parameter. https://localhost:9443/api/openbanking/backend-berlin/services/v130/accounts/payable -->
        <PayableAccountsRetrieveEndpoint>http://APIM_HOSTNAME:9763/api/openbanking/backend-uk/services/bankaccounts/bankaccountservice/payable-accounts</PayableAccountsRetrieveEndpoint>
        <!-- Configure endpoint to retrieve UK sharable accounts passing userId https://localhost:9443/as400/sharable-accounts/{userId}  -->
        <!-- Configure endpoint to retrieve BERLIN sharable accounts passing PSU-ID as a path parameter. https://localhost:9443/api/openbanking/backend-berlin/services/v130/accounts/shareable -->
        <SharableAccountsRetrieveEndpoint>http://APIM_HOSTNAME:9763/api/openbanking/backend-uk/services/bankaccounts/bankaccountservice/sharable-accounts</SharableAccountsRetrieveEndpoint>
    </ConsentManagement>
    <CustomerDetails>
        <Enable>false</Enable>
        <CustomerDetailsRetrieveEndpoint></CustomerDetailsRetrieveEndpoint>
    </CustomerDetails>
</Server>
