<sequence xmlns="http://ws.apache.org/ns/synapse" name="cds-admin-endpoint-insequence-1.8.0">

    <!--Appending Basic Auth Header-->
    <header name="Authorization" scope="transport" action="remove" />
    <header name="Authorization" value="Basic YWRtaW5Ad3NvMi5jb206d3NvMjEyMw==" scope="transport"/>

    <property name="endpointURI" expression="get-property('To')"/>
    <filter regex=".*metrics.*" source="$ctx:endpointURI">
        <then>
            <property name="pathParam" value="get-property('To')" />
            <header name="To" expression="fn:concat('https://localhost:9443/api/openbanking/metrics/admin/metrics', '?period=ALL')" />
        </then>
        <else>
            <header name="To" value=" https://localhost:9446/api/openbanking/metadata-mgt/admin/register/metadata" />
        </else>
    </filter>

</sequence>
